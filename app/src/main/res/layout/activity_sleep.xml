<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SleepActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
        <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="30dp" />

        <TextView android:layout_width="300dp" android:layout_height="wrap_content"
                  android:id="@+id/SleepText"
                  android:layout_gravity="center"
                  android:paddingTop="40dp"
                  android:paddingBottom="40dp"
                  android:textSize="20dp"
                  android:text="您这一天一共休息了：10小时32分，其中，深度睡眠占了80%"
        />
        <Button android:layout_width="wrap_content" android:layout_height="match_parent"
                android:id="@+id/SleepButton"
                android:text="开始休息~"
                android:layout_gravity="center"
        />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>